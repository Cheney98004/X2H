<root>
    <Web-Title>X2H 展示</Web-Title>

    <label id="title">
        <text>歡迎使用 X2H</text>
        <geometry>
            <x>20</x>
            <y>20</y>
            <width>default</width>
            <height>default</height>
        </geometry>
        <font-size>24</font-size>
        <color>#333</color>
        <class>title-text</class>
    </label>

    <input id="nameInput">
        <geometry>
            <x>20</x>
            <y>70</y>
            <width>200</width>
            <height>30</height>
        </geometry>
        <type>text</type>
        <placeholder>請輸入您的名字</placeholder>
        <background-color>#f5f5f5</background-color>
        <border-radius>4</border-radius>
    </input>

    <button id="greetButton">
        <text>打招呼</text>
        <geometry>
            <x>20</x>
            <y>120</y>
            <width>100</width>
            <height>40</height>
        </geometry>
        <background-color>#4CAF50</background-color>
        <color>#fff</color>
        <border-radius>4</border-radius>
        <on-click>
            const name = document.getElementById('nameInput').value || '訪客';
            alert(`你好，${name}！歡迎使用 X2H！`);
        </on-click>
    </button>
</root>